<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:padding="16dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/border_background"> <!-- Set the border background -->

    <!-- Food Name TextView -->
    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <!-- Food Description TextView -->
    <TextView
        android:id="@+id/foodDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Description"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"/>

    <!-- Additional Nutritional Information -->
    <TextView
        android:id="@+id/foodCaloriesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories: "
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/foodCarbsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbohydrates: "
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/foodProteinsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proteins: "
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/foodFatsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fats: "
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/foodAllergenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allergens: "
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <!-- ImageButton for Adding to Favourites -->
    <ImageButton
        android:id="@+id/favouriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/star_big_off"
        android:contentDescription="Add to Favourites"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"/>
</LinearLayout>
